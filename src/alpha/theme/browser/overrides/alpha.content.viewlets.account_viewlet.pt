<html xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="alpha.theme">
<div id="modal-register-notify">
  <div class="modal fade" id="registerNotify" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-12">
              <p i18n:translate="">You are not currently logged in</p>
              <p i18n:translate="">If you want a discounted price</p>
              <p i18n:translate="">Please login or register for an account</p>
              
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a href="${view/context/portal_url}/login">
            <button type="button" class="btn btn-primary" i18n:translate="" 
                    style="background-color: #e378a3; border-color: #e378a3;">Log In</button>
          </a>
          <a href="${view/context/portal_url}/register_form">
          <button type="button" class="btn btn-primary" i18n:translate="" 
                  style="background-color: #e378a3; border-color: #e378a3;">Register</button>
          </a>
        </div>
      </div>
    </div>
  </div>
  <script>
    $(".fa-shopping-cart").parent().click(function(){
      if( "${view/isAnonymous}" === "True"){
        isShowed = $.cookie('first_anonymous_modal')
        if(!isShowed){
          path = $("#root-pathname").data("path")
          var date = new Date()
          date.setTime(date.getTime() + (60 * 60 * 1000))
          $.cookie('first_anonymous_modal', 'isShowed', {path: '/'+path})
          $("#registerNotify").modal();
        }
      }
    });
  </script>
</div>
<div class="header-left-menu" id="languageselector">
</div>

<div class="submenu-top">
  <ul>
    <li><a href="${view/context/portal_url}/personal_details" i18n:translate="">My account</a></li>
    <li tal:condition="not:view/isAnonymous"><a href="${view/context/portal_url}/order_history" i18n:translate="">Order History</a></li>
    <li tal:condition="not:view/isAnonymous"><a href="${view/context/portal_url}/wishlist" i18n:translate="">My wishlist</a></li>
    <li tal:condition="not:view/isAnonymous"><a href="${view/context/portal_url}/bonus_history" i18n:translate="">Bonus</a></li>
    <li><a href="${view/context/portal_url}/confirm_cart" i18n:translate="">checkout</a></li>
    <li tal:condition="view/isAnonymous"><a href="${view/context/portal_url}/login" i18n:translate="">Login</a></li>
    <li tal:condition="not:view/isAnonymous"><a href="${view/context/portal_url}/log_out" i18n:translate="">Log out</a></li>
  </ul>
</div>

<div class="search-form">
  <form action="${view/context/portal_url}/search_view" id="search_form">
    <input name="searchableText" type="text" placeholder="Search" />
    <a href="javascript:{}" onclick="document.forms.search_form.submit()">Search</a>
  </form>
  <script>

  </script>
</div>

</html>
