<html xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="alpha.theme">
<footer id="footer-area">

<style>
.footer-top-area .pre-line{
  white-space: pre-line;
  display: inline-block;
  vertical-align: inherit;
}
.footer-address li{
  vertical-align: top;
}
</style>
  <div class="footer-top-area pt-80 pb-50">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <!-- single-footer-start -->
          <div class="single-footer">
            <div class="footer-logo mb-30">
              <a href="${view/context/portal_url}" ><img src="${view/getSiteLogo}"></a>
            </div>
            <p class="pre-line">${view/description}</p>
            <div class="footer-address">
              <ul>
                <li><i class="fa fa-map-marker"></i><span i18n:translate="">address</span> :<span class="pre-line">${view/address}</span></li>
                <li><i class="fa fa-envelope"></i><span i18n:translate="">Email</span> :<span class="pre-line" >${view/email}</span></li>
                <li><i class="fa fa-mobile"></i><span i18n:translate="">Phone</span> :<span class="pre-line" >${view/cellphone}</span></li>
              </ul>
            </div>
            <div class="social-link">
              <ul>
                <li tal:condition="view/fb_link"><a href="${view/fb_link}"><i class="fa fa-facebook"></i></a></li>
                <li tal:condition="view/youtube_link"><a href="${view/youtube_link}"><i class="fa fa-youtube-play"></i></a></li>
              </ul>
            </div>
          </div>
          <!-- single-footer-end -->
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <!-- single-footer-start -->
          <div class="single-footer">
            <div class="footer-title">
              <h4 >品牌故事</h4>
            </div>
            <div class="footer-menu">
              <ul>
                <li><a href="${view/context/portal_url}/company-info" >緣起</a></li>
                <li><a href="${view/context/portal_url}/company-info" >理念</a></li>
                <li><a href="${view/context/portal_url}/company-info" >未來展望</a></li>
              </ul>
            </div>
          </div>
          <!-- single-footer-end -->
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <!-- single-footer-start -->
          <div class="single-footer">
            <div class="footer-title">
              <h4 >商品介紹</h4>
            </div>
            <div class="footer-menu">
              <ul>
                
                <li tal:repeat="category view/getProductCategory">
                  <a href="${view/context/portal_url}/products?p_category=${category}" >${category}系列</a>
                </li>
              </ul>
            </div>
          </div>
          <!-- single-footer-end -->
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <!-- single-footer-start -->
          <div class="single-footer">
            <div class="footer-title">
              <h4 i18n:translate="">User Area</h4>
            </div>
            <div class="footer-menu">
              <ul>
                <li><a href="${view/context/portal_url}/register_form" i18n:translate="">Join us</a></li>
                <li><a href="${view/context/portal_url}/order_history" i18n:translate="">Order History</a></li>
                <li><a href="${view/context/portal_url}/shopping-notes" i18n:translate="">Shopping Notes</a></li>
                <li><a href="${view/context/portal_url}/privacy-policies" i18n:translate="">Privacy Policies</a></li>
              </ul>
            </div>
          </div>
          <!-- single-footer-end -->
        </div>
      </div>
    </div>
  </div>
  <div class="footer-bottom-area ptb-20">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
          <div class="copy-right">
            <?python import datetime ?>
            <p>Copyright © ${python: datetime.datetime.now().year}
                         <a href="${view/context/portal_url}">Kireistar CO., LTD</a>. All Rights Reserved</p>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="payment-area">
            <a ><img src="++theme++alpha.theme/img/1.png" alt="payment" style="max-height: 30px;" /></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="notify-msg-translate" style="display: none;" 
       data-c_success="add compare success" data-c_exist="add compare exist" data-c_full="add compare full"
       data-s_success="add shop-cart success" data-s_exist="add shop-cart exist" data-s_empty="add shop-cart empty"
       data-buy_success="buy success"
       i18n:attributes="data-c_success;data-c_exist;data-c_full;data-s_success;data-s_exist;data-s_empty;data-buy_success"></div>
  <div id="root-pathname" style="display: none;" data-path="${view/getRootPathname}" />


</footer>
</html>
