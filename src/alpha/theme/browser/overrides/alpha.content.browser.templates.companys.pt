<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="alpha.theme">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">
<tal:cities tal:define="comDict view/getCompany;
                      cities python: sorted(comDict.keys());">
   <tal:city tal:repeat="city cities">
    <div class="col-xs-12" style="border-bottom:1px solid #ccc; margin: 20px 0 15px 0; padding: 0;">
      <h4 style="font-size:16px"><b>${python: view.getCityName(city)}</b></h4>
    </div>
    <tal:item tal:repeat="data python: comDict[city]">
      <div class="col-lg-6 col-xs-12 ">
        <tal:define define="obj python:data.getObject()">
          <div class="col-sm-6 col-xs-12" style='padding: 0; height: 220px; ' >
            <img src="${obj/absolute_url}/@@images/image" style="height:100%; width:100%; object-fit:cover;" />
          </div>
          <div class="col-sm-6 col-xs-12" style='padding-left: 5px;'>
            <p><b>${python: obj.title}</b><p>
            <tal:content tal:content="structure python: getattr(obj.text, 'raw', '')" />
          </div>

        </tal:define>
      </div>
    </tal:item>
  </tal:city>
</tal:cities>

</metal:content-core>
</metal:content-core>

</body>
</html>

