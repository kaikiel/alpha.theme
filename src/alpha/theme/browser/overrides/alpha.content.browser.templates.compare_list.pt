<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    xmlns:v-on="http://vuejs.org"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="alpha.theme">
<body>
<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

<style>
table{
    margin-bottom: 20px
}
th,td{
    border: 1px solid #ccc;
    padding: 20px 15px;
    text-align:center;
}
th{
    background: #eee;
}
.btn{
    display: block;
    width: 100%;
    border: none;
    padding: 10px;
    font-size: 18px;
    margin-bottom: 5px;
    color: white;
}
.add_to_cart{
    background: #fce38a;
    border-radius: 5px
}
.remove{
    background: black;
    border-radius: 20px;
}
.remove:hover{
    color: #ccc;
}
</style>
<table tal:condition="view/data" >
  <tr>
    <th colspan="${python: len(view.data) + 1}" i18n:translate="">PRODUCT COMPARE</th>
  </tr>
  <tr>
    <td i18n:translate="">Product</td>
    <td tal:repeat="item view/data" >
	<a tal:define="obj python:item.getObject()" href="${python: obj.absolute_url()}">${python: obj.title}</a>
    </td>
  </tr>
  <tr>
    <td i18n:translate="">Image</td>
    <td tal:repeat="item view/data"><img tal:define="obj python:item.getObject()" src="${python: obj.absolute_url()}/@@images/cover"></td>
  </tr>
  <tr>
    <td i18n:translate="">Price</td>
    <td tal:repeat="item view/data" class="product-price" >
      <ul tal:define="obj python:item.getObject()">
	<tal:condition condition="python: obj.salePrice">
          <li class="new-price sale" style="font-size:30px">${python: obj.salePrice}</li>
          <li class="old-price">${python: obj.price}</li>
	</tal:condition>
        <tal:condition condition="not: python: obj.salePrice">
          <li>${python: obj.price}</li>
        </tal:condition>
      </ul>
    </td>
  </tr>
  <tr>
    <td i18n:translate="">Availability</td>
    <td tal:repeat="item view/data">
      <tal:define define="obj python:item.getObject()">
        <tal:condition condition="python: obj.availability">
	    In Stock
        </tal:condition>
        <tal:condition condition="not: python: obj.availability">
	    Out Of Stock
        </tal:condition>
      </tal:define>
    </td>
  </tr>
  <tr>
    <td i18n:translate="">Brand</td>
    <td tal:repeat="item view/data" >${python: item.getObject().brand}</td>
  </tr>
  <tr>
    <td i18n:translate="">Rating</td>
    <td tal:repeat="item view/data" >${python: item.getObject().rating}</td>
  </tr>
  <tr>
    <td i18n:translate="">Summary</td>
    <td tal:repeat="item view/data" >${python: item.getObject().description}</td>
  </tr>
  <tr>
    <td></td>
    <td tal:repeat="item view/data" >
	<button data-translationgroup="${python: item.TranslationGroup}"
		class="add_to_cart btn" i18n:translate="">Add To Cart</button>
	<button class="remove btn" data-TranslationGroup="${python: item.TranslationGroup}" i18n:translate="">Remove</button>
    </td>
  </tr>

</table>
</metal:content-core>
</metal:content-core>

<metal:js fill-slot="js-bottom-slot">
<script>
    $(function(){
	$('.add_to_cart').click(function(){
	    TranslationGroup = $(this).data('translationgroup')
	    rep = shop_cart.add_shop(TranslationGroup, 1)
	    if(rep == 'success'){
                compare_list = JSON.parse($.cookie('compare_list'))
		compare_list.splice(compare_list.indexOf(TranslationGroup), 1)
		$.cookie('compare_list', JSON.stringify(compare_list))
		window.location.reload()
	    }
	})
	$('.remove').click(function(){
	    uid = $(this).data('uid')
            compare_list = JSON.parse($.cookie('compare_list'))
            compare_list.splice(compare_list.indexOf(uid), 1)
            $.cookie('compare_list', JSON.stringify(compare_list))
            window.location.reload()
	})
    })
</script>
</metal:js>

</body>
</html>

